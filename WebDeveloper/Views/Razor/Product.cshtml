@model IEnumerable<WebDeveloper.Model.Product>

@{
    ViewBag.Title = "CERVEZAS";
    ViewBag.Demo = "Lista de Precios";    
}
@using WebDeveloper.Helpers
@helper DisplayPriceRazor(double price) {
    if (price == 0.0)
    {
        <span>Free!!!</span>
    }
    else
    {
        <span>@price</span>
    }
}

<h1>@ViewBag.Title</h1>
<h3>@ViewBag.Demo</h3>
<br />

<ul>
    @foreach (var item in Model)
    {
        <li>
            <span>@item.Description : </span>
            @DisplayPriceRazor(item.Price)
            <div>
                @CustomHelper.DisplayPriceStatic(item.Price)
            </div>
            <div>
                @Html.DisplayPriceExtension(item.Price)
            </div>  
            <div>
                @CustomHelper.DisplayDateOrNullStatic(item.Registry)
            </div>
            <div>
                @Html.DisplayDateOrNullExtension(item.Registry)
            </div>
        </li>
    }
</ul>

